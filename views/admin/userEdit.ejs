<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../includes/head.ejs") %>
    <title>Edit user</title>
    <link rel="stylesheet" href="/css/Admin.css" />
  </head>
  <body>
    <header><%- include("../includes/header.ejs") %></header>
    <main>
      <section class="formular">
        <hr
          style="
            height: 1.5px;
            color: #8b0000;
            background-color: #8b0000;
            opacity: 100%;
            margin: 3rem 3rem 0;
          "
        />

        <h2>Edit user</h2>
        <hr
          style="
            height: 1.5px;
            color: #8b0000;
            background-color: #8b0000;
            opacity: 100%;
            margin: 0 3rem;
          "
        />

        <div class="user-list">
          <div class="redirect-btns">
            <button
              class="user-list-btn"
              type="button"
              onclick="history.back()"
            >
              <img src="/icons/redirect-btn.png" alt="redirect" /> Go back
            </button>
          </div>
        </div>

        <form action="/admin/user/<%= user.user_id %>/edit" method="post">
          <div class="form-body">
            <% if(inputData.errorMessage){ %>
            <p class="error-message"><%= inputData.errorMessage %></p>
            <% } %>
            <label for="name">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              value="<%= user.name %>"
              required
            />
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              id="email"
              value="<%= user.email %>"
              required
            />
          </div>
          <div class="form-btn">
            <button class="send-button">Update user</button>
          </div>
        </form>
        <hr
          style="
            height: 1.5px;
            color: #8b0000;
            background-color: #8b0000;
            opacity: 100%;
            margin: 3rem 3rem;
          "
        />
      </section>
    </main>
    <footer><%- include("../includes/footer.ejs") %></footer>
  </body>
</html>
