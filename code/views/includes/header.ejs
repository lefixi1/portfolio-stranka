<div class="header-container">
  <div class="logo">
    <a href="/"><img src="/icons/Logo WEBY.png" /></a>
  </div>
  <nav class="navbar">
    <ul class="nav-menu">
      <% if(locals.isAdmin) { %>
      <li class="nav-item">
        <a href="/admin/users-list">Portal users</a>
      </li>
      <% } %>
      <li><a href="/">Main</a></li>
      <% if(locals.isAuth) {%>

      <li><a href="/Last_minute">Last minute</a></li>
      <li class="dropdown">
        <a id="dropdownButton" class="dropdown-button" href="#"
          >Countries <span id="arrow" class="arrow">â–¼</span></a
