          <% for (const c of countries) { %>
          <li>
            <a href="/Countries/<%= c.count_name %>"><%= c.count_name %></a>
          </li>
          <% } %> <% } else { %>
          <li>No countries available</li>
          <% } %>
        </ul>
      </li>
      <li><a href="/Book">Book</a></li>
      <% } %>
      <li><a href="/Contacts">Contacts</a></li>
      <% if(!locals.isAuth) {%>
      <li><a href="/Sign-up">SignUp</a></li>
