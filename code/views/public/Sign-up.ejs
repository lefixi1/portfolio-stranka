<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../includes/head.ejs") %>
    <title>Sign Up</title>
    <link rel="stylesheet" href="css/Log-Sig.css" />
  </head>
  <body>
    <header><%- include("../includes/header.ejs") %></header>

    <main>
      <hr
        style="
          height: 1.5px;
          color: #8b0000;
          background-color: #8b0000;
          opacity: 100%;
          margin: 3rem 3rem 0;
        "
      />

    <section class="formular" >
      <h2>Sign Up</h2>
      <hr
        style="
          height: 1.5px;
          color: #8b0000;
          background-color: #8b0000;
          opacity: 100%;
          margin: 0 3rem;
        "
      />

      <div class="redir">
        <a href="/Login" class="redir-btn">Login</a>
      </div>
      
      <section class="auth-section">
      <form action="/Sign-up" method="post">
        
        <div class="form-body">
          <% if(inputData.errorMessage){ %>
            <p class="error-message"><%= inputData.errorMessage %></p>
            <% } %>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            value="<%= inputData.name %>"
            required
          />
          <input
            type="text"
            id="surname"
            name="surname"
            placeholder="Surname"
            value="<%= inputData.surname %>"
          />
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="<%= inputData.email %>"
            required
          />
          <select name="gender" id="gender">
            <option value="" disabled <% if (!inputData.gender) { %>selected<% } %>>Gender</option>
  <option value="male" <% if (inputData.gender === "male") { %>selected<% } %>>Male</option>
  <option value="female" <% if (inputData.gender === "female") { %>selected<% } %>>Female</option>
  <option value="other" <% if (inputData.gender === "other") { %>selected<% } %>>Other</option>
          </select>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            value="<%= inputData.password %>"
            required
          />
          <input
            type="password"
            id="password_repeat"
            name="password_repeat"
            placeholder="Repeat password"
            value="<%= inputData.password_repeat %>"
            required
          />
        </div>
        <div style="margin-top: 2rem">
          <button
            class="send-button"
            type="submit"
            style="border-radius: 0.25rem"
          >
            SignUp
          </button>
        </div>
      </form>
      </section>
    </section>

    <hr
        style="
          height: 1.5px;
          color: #8b0000;
          background-color: #8b0000;
          opacity: 100%;
          margin: 0 3rem;
        "
      />

    </main>

    <%- include("../includes/contact-option.ejs") %>

    <footer><%- include("../includes/footer.ejs") %></footer>

    
  </body>
</html>
